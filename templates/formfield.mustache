{{!
    @template customfield_sprogramme/formfield

    The form field button to show in the settings page.

    Example context (json):
    {
        "courseid": 1,
        "cssurl": "http://example.com/customfield/sprogramme/styles.css",
        "rowname": "Row 1"
    }
}}
<link rel="stylesheet" type="text/css" href="{{{cssurl}}}">
<a href="" class="btn btn-primary" data-action="editprogramme">Edit programme</a>
<div class="d-none">
    <div class="customfield-sprogramme" data-region="app">
        <div data-region="modules">
        </div>
    </div>
    <div data-region="disciplineform-container">
        {{> customfield_sprogramme/disciplineform}}
    </div>
</div>
{{#js}}
require(['customfield_sprogramme/formfield'], function(formfield) {
    const element = document.querySelector('[data-action="editprogramme"]');
    formfield.init(element, {{courseid}});
});
{{/js}}