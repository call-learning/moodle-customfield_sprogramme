{{!
    @template customfield_sprogramme/table/rfcs

    A dropdown button for each RFC in the table.
    The button shows the RFC name, the dropdown menu show options "Accept" and "Reject", Augment table, and the date of the RFC.

    Example context (json):
    {
        "userinfo": {
            "fullname": "John Doe",
            "userid": 1
        },
        "timemodified": 1633036800,
    }
}}
<div class="d-flex">
    {{#rfcs}}
        <div class="dropdown" data-rfc data-userid="{{userinfo.userid}}">
            <button class="btn btn-outline-info btn-sm ml-1 dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                {{userinfo.fullname}} {{#issubmitted}}<i class="fa fa-check"></i>{{/issubmitted}}
            </button>
            <div class="dropdown-menu small" aria-labelledby="dropdownMenuButton">
                {{#issubmitted}}
                    <p class="dropdown-item mb-0 small">{{#str}}submitdate, customfield_sprogramme{{/str}} {{#userdate}} {{timemodified}}, {{#str}} strftimedatetime, core_langconfig {{/str}} {{/userdate}}</p>
                {{/issubmitted}}
                <div class="dropdown-divider"></div>
                {{#canaccept}}
                <a class="dropdown-item small" data-action="acceptrfc">{{#str}}accept, customfield_sprogramme{{/str}}</a>
                <a class="dropdown-item small" data-action="rejectrfc">{{#str}}reject, customfield_sprogramme{{/str}}</a>
                {{/canaccept}}
                {{#cansubmit}}
                    <a class="dropdown-item small" data-action="submitrfc">{{#str}}submitrfc, customfield_sprogramme{{/str}}</a>
                    <a class="dropdown-item small" data-action="removerfc">{{#str}}removerfc, customfield_sprogramme{{/str}}</a>

                {{/cansubmit}}
                {{#cancancel}}
                    <a class="dropdown-item small" data-action="cancelrfc">{{#str}}cancelrfc, customfield_sprogramme{{/str}}</a>
                {{/cancancel}}
                <a class="dropdown-item small" data-action="augmenttable">{{#str}}augment, customfield_sprogramme{{/str}}</a>
            </div>
        </div>
    {{/rfcs}}
    {{#rfcs}}
        <div class="actions d-flex align-items-start" data-rfc data-userid="{{userinfo.userid}}">
            {{#issubmitted}}{{#cancancel}}
                <div class="text-danger d-flex pl-3 pt-1">
                    {{#str}}changesubmitted, customfield_sprogramme, {{userinfo.fullname}} {{/str}}, {{#str}}submitdate, customfield_sprogramme{{/str}} {{#userdate}} {{timemodified}}, {{#str}} strftimedatetime, core_langconfig {{/str}} {{/userdate}}
                </div>
            {{/cancancel}}{{/issubmitted}}
            {{#cansubmit}}
                <a class="btn btn-sm ml-1 mr-1 btn-success" data-action="submitrfc">{{#str}}submitrfc, customfield_sprogramme{{/str}}</a>
                <a class="btn btn-sm btn-icon d-flex justify-content-center align-items-center icon-no-margin" data-toggle="collapse" data-target="#rfc-help" aria-expanded="false" aria-controls="rfc-{{rfcid}}">
                    {{#pix}} a/help, core, {{#str}} rfc:help, customfield_sprogramme {{/str}} {{/pix}}
                </a>
            {{/cansubmit}}
        </div>
    {{/rfcs}}

    <button class="btn btn-sm btn-info d-none ml-1" data-action="resetrfc">
        {{#str}}resetrfc, customfield_sprogramme{{/str}}
    </button>
</div>
<div class="collapse" id="rfc-help">
    <div class="alert alert-info mt-3 mx-1 pt-4">
        {{#str}}rfc:helptext, customfield_sprogramme{{/str}}
    </div>
</div>