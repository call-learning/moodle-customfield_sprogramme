{{#modules}}
    <div class="modules mb-5" data-region="module" data-id="{{moduleid}}">
        <div class="d-flex mb-3 p-1">
            {{#editor}}
                <div class="h5 mb-0 d-flex align-items-center">
                    <input class="form-control module-input" data-region="modulename" type="text" value="{{{modulename}}}"/>
                </div>
                <button class="btn btn-icon icon-no-margin mr-1 ml-3" data-id="{{moduleid}}" data-action="deletemodule">{{#pix}}i/delete, core, {{#str}}delete{{/str}}{{/pix}}</button>
                <button class="btn btn-icon icon-no-margin mr-1" data-id="{{id}}" data-action="addmodule">{{#pix}}e/insert, core, {{#str}}add{{/str}}{{/pix}}</button>
            {{/editor}}
            {{^editor}}
                <h4 class="mb-0">{{{modulename}}}</h4>
            {{/editor}}
        </div>
        <table class="programm-table {{^editor}}standard{{/editor}}{{#editor}}editor{{/editor}}">
            <thead>
                <tr data-region="columns">
                   {{> customfield_sprogramme/table/columns}}
                </tr>
            </thead>
            <tbody data-region="rows">
                {{> customfield_sprogramme/table/rows}}
            </tbody>
        </table>
    </div>
{{/modules}}
