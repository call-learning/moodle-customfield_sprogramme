{{#mustacheonly}}
    <table>
{{/mustacheonly}}
{{#rows}}
    <tr data-row data-index="{{id}}" draggable="true" class="{{#error}} haserror {{/error}}{{#deleted}}deletepending{{/deleted}}{{#rowchanges}} hasrowchanges{{/rowchanges}}">
        {{#cells}}
            {{#editor}}
                <td data-cell data-columnid="{{columnid}}"{{#changes}} data-action="showchanges"{{/changes}} class="{{#changed}}haschanges {{/changed}}{{#protected}}protected {{/protected}}{{#float}}float{{/float}}{{#int}}int{{/int}}">
                    {{#int}}
                        <input name="input-{{column}}-{{columnid}}" class="programm-input" data-old="{{oldvalue}}" data-input="auto" {{#group}}data-group="{{group}}"{{/group}} type="number" value="{{{value}}}"{{#protected}}{{^canaddrfc}}disabled {{/canaddrfc}}{{/protected}} placeholder="{{{sample_value}}}"/>
                    {{/int}}
                    {{#float}}
                        <input name="input-{{column}}-{{columnid}}" class="programm-input" data-old="{{oldvalue}}" data-input="auto" {{#group}}data-group="{{group}}"{{/group}} type="number" value="{{{value}}}"{{#protected}}{{^canaddrfc}}disabled {{/canaddrfc}}{{/protected}} placeholder="{{{sample_value}}}"/>
                    {{/float}}
                    {{#textold}}
                        <input name="input-{{column}}-{{columnid}}" class="programm-input" data-old="{{oldvalue}}" data-input="auto" maxlength="{{length}}" type="text" value="{{{value}}}"{{#protected}}{{^canaddrfc}}disabled {{/canaddrfc}}{{/protected}} placeholder="{{{sample_value}}}" />
                    {{/textold}}
                    {{#text}}
                        <textarea name="input-{{column}}-{{columnid}}" class="programm-textarea" data-old="{{oldvalue}}" data-input="auto" maxlength="{{length}}" {{#protected}}{{^canaddrfc}}disabled {{/canaddrfc}}{{/protected}} placeholder="{{{sample_value}}}" {{#height}}style="height: {{height}}px"{{/height}}>{{{value}}}</textarea>
                    {{/text}}
                    {{#select}}
                        <select name="select-{{column}}-{{columnid}}" data-input="auto" class="programm-input">
                            {{#options}}
                                <option value="{{{name}}}" {{#selected}}selected{{/selected}}>{{{name}}}</option>
                            {{/options}}
                        </select>
                    {{/select}}
                </td>
            {{/editor}}
            {{^editor}}
                <td class="static {{type}}">
                    {{#changed}}
                        <div class="d-flex change">
                            <div class="oldvalue">{{{oldvalue}}}</div>
                            <div class="newvalue ml-auto">{{{value}}}</div>
                        </div>
                    {{/changed}}
                    {{^changed}}
                        <span class="staticdata">{{{value}}}</div>
                    {{/changed}}
                </td>
            {{/editor}}
        {{/cells}}
        <td data-cell data-columnid="{{columnid}}" class="disciplines" data-disciplines data-rowid="{{id}}">
            <div class="d-flex">
                {{#editor}}
                <button class="btn btn-icon icon-no-margin jsbutton" data-id="{{id}}" data-action="adddisc">{{#pix}}i/addblock, core, {{#str}}add{{/str}}{{/pix}}</button>
                {{/editor}}
                <div class="container-disciplines" data-region="container-disciplines">
                    {{#disciplines}}
                        {{> customfield_sprogramme/table/tag}}
                    {{/disciplines}}
                </div>
            </div>
        </td>
        <td data-cell data-columnid="{{columnid}}" class="competencies" data-competencies data-rowid="{{id}}">
            <div class="d-flex">
                {{#editor}}
                <button class="btn btn-icon icon-no-margin jsbutton" data-id="{{id}}" data-action="addcomp">{{#pix}}i/addblock, core, {{#str}}add{{/str}}{{/pix}}</button>
                {{/editor}}
                <div class="container-competencies" data-region="container-competencies">
                    {{#competencies}}
                        {{> customfield_sprogramme/table/tag}}
                    {{/competencies}}
                </div>
            </div>
        </td>
        {{#editor}}
        <td class="actions">
            <button class="btn btn-icon icon-no-margin mr-1 jsbutton" data-id="{{id}}" data-action="deleterow">{{#pix}}i/delete, core, {{#str}}delete{{/str}}{{/pix}}</button>
            <button class="btn btn-icon icon-no-margin mr-1 jsbutton" data-region="dragicon">{{#pix}}i/move_2d, core, {{#str}}move{{/str}}{{/pix}}</button>
            <button class="btn btn-icon icon-no-margin mr-1 jsbutton" data-id="{{id}}" data-action="addrow">{{#pix}}e/insert, core, {{#str}}add{{/str}}{{/pix}}</button>
        </td>
