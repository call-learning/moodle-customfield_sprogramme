{{!
    @template customfield_sprogramme/disciplineform

    TODO describe template disciplineform

    Example context (json):
    {
        "rowname": "Row 1"
    }
}}
<div class="discipline-form" data-region="disciplineform">
    <div class="formarrow"></div>
    <input type="hidden" id="rowid" value="">
    <input type="hidden" id="discipline-id" value="">
    <input type="hidden" id="lastids" value="">
    <div class="d-flex icon-no-margin">
        <h5 data-region="rownumber">{{rowname}}</h5>
        <button class="btn btn-secondary ml-auto mb-2 btn-sm" data-action="closedisciplineform">
            {{#pix}}e/cancel, core{{/pix}}
            <span class="sr-only">{{#str}}close, admin{{/str}}</span>
        </button>
    </div>
    <div class="form-group d-flex mb-0">
        <label for="discipline-name" class="sr-only">{{#str}}disciplines, customfield_sprogramme{{/str}}</label>
        <div class="col-6 p-0">
            <input type="search" class="form-control" id="discipline-name" placeholder="Search">
        </div>
        <div class="col-4 p-0">
            <input type="number" class="form-control" id="discipline-value" placeholder="Value" max="100" min="0">
        </div>
        <div class="col-2 p-0">
            <button class="btn btn-secondary" id="discipline-confirm" data-action="discipline-confirm">
                {{#str}}add{{/str}}
            </button>
        </div>
    </div>
    <div class="row no-gutters">
        <div class="col-12 p-0">
            <div data-region="warnings" class="text-danger"></div>
        </div>
    </div>
    <hr class="mb-1">
    <div data-region="selected-disciplines" class="d-flex flex-wrap">
    </div>
    <hr class="mt-1">
    <div class="list-group discipline-list" data-list="data-disciplines">
        {{#disciplines}}
            <div class="list-group-item py-1 px-2 bg-light">
                <div class="strong">{{name}}</div>
            </div>
            {{#items}}
                <a href="#" class="list-group-item list-group-item-action p-2" data-option data-action="selectdiscipline" data-id="{{uniqueid}}">{{name}}</a>
            {{/items}}
        {{/disciplines}}
    </div>
    <div class="list-group competences-list" data-list="data-competencies">
        {{#competences}}
            <div class="list-group-item py-1 px-2 bg-light">
                <div class="strong">{{name}}</div>  
            </div>
            {{#items}}
                <a href="#" class="list-group-item list-group-item-action p-2" data-option data-action="selectdiscipline" data-id="{{uniqueid}}">{{name}}</a>
            {{/items}}
        {{/competences}}
    </div>
</div>