<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="customfield/field/sprogramme/db" VERSION="20240408" COMMENT="XMLDB for programme custom field"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../../lib/xmldb/xmldb.xsd"
>
<TABLES>
    <TABLE NAME="customfield_sprogramme" COMMENT="Combined information for the programme">
        <FIELDS>
            <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
            <FIELD NAME="uc" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Course identifier" SEQUENCE="false"/>
            <FIELD NAME="cct_ept" TYPE="char" LENGTH="20" NOTNULL="false" COMMENT="CCT / EPT" SEQUENCE="false"/>
            <FIELD NAME="dd_rse" TYPE="char" LENGTH="20" NOTNULL="false" COMMENT="DD / RSE" SEQUENCE="false"/>
            <FIELD NAME="type_ae" TYPE="char" LENGTH="10" NOTNULL="false" COMMENT="Type AEEEV" SEQUENCE="false"/>
            <FIELD NAME="sequence" TYPE="int" LENGTH="10" NOTNULL="false" COMMENT="Sequence in module" SEQUENCE="false"/>
            <FIELD NAME="intitule_seance" TYPE="char" LENGTH="255" NOTNULL="false" COMMENT="Title of the session/exercise" SEQUENCE="false"/>
            <FIELD NAME="cm" TYPE="float" NOTNULL="false" COMMENT="CM hours" SEQUENCE="false"/>
            <FIELD NAME="td" TYPE="float" NOTNULL="false" COMMENT="TD hours" SEQUENCE="false"/>
            <FIELD NAME="tp" TYPE="float" NOTNULL="false" COMMENT="TP hours" SEQUENCE="false"/>
            <FIELD NAME="tpa" TYPE="float" NOTNULL="false" COMMENT="TPa hours" SEQUENCE="false"/>
            <FIELD NAME="tc" TYPE="float" NOTNULL="false" COMMENT="TC hours" SEQUENCE="false"/>
            <FIELD NAME="aas" TYPE="float" NOTNULL="false" COMMENT="AAS hours" SEQUENCE="false"/>
            <FIELD NAME="fmp" TYPE="float" NOTNULL="false" COMMENT="FMP hours" SEQUENCE="false"/>
            <FIELD NAME="perso_av" TYPE="float" NOTNULL="false" COMMENT="Personal hours before" SEQUENCE="false"/>
            <FIELD NAME="perso_ap" TYPE="float" NOTNULL="false" COMMENT="Personal hours after" SEQUENCE="false"/>
            <FIELD NAME="consignes" TYPE="text" NOTNULL="false" COMMENT="Work instructions for the session" SEQUENCE="false"/>
            <FIELD NAME="supports" TYPE="text" NOTNULL="false" COMMENT="Pedagogical supports" SEQUENCE="false"/>
        </FIELDS>
        <KEYS>
            <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            <KEY NAME="uc_fk" TYPE="foreign" FIELDS="uc" REFTABLE="course" REFFIELDS="id"/>
        </KEYS>
    </TABLE>

    <!-- Disciplines Table -->
    <TABLE NAME="customfield_sprogramme_disc" COMMENT="Linked disciplines">
        <FIELDS>
            <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
            <FIELD NAME="pid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Foreign key to Remplissage table" SEQUENCE="false"/>
            <FIELD NAME="discipline" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="Discipline name" SEQUENCE="false"/>
            <FIELD NAME="percentage" TYPE="float" NOTNULL="true" COMMENT="Percentage of discipline" SEQUENCE="false"/>
        </FIELDS>
        <KEYS>
            <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            <KEY NAME="fk_programme" TYPE="foreign" FIELDS="pid" REFTABLE="customfield_sprogramme" REFFIELDS="id"/>
        </KEYS>
    </TABLE>
</TABLES>
</XMLDB>